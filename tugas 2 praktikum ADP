uses crt;
var
    total,pesanan,makanan,minuman,paketan,item,harga,total_harga:integer;
Begin
          clrscr;
          writeln('Nama = Naurah Mawaddah');
          writeln('Nim = 2310431002');
          writeln('shift = 1');
          writeln('tugas praktikum adp ke-2');
          writeln();
